<h1>Posts</h1>
<h2>Daily (2 weeks)</h2>
<%= render partial: '/chart', locals: { chart_input_data: :chart_data } %>
<h2>Hourly (1 month)</h2>
<%= render partial: '/chart', locals: {discrete: true, chart_input_data: :perhour_chart_data } %>
<h2>Weekly (1 month)</h2>
<%= render partial: '/chart', locals: {discrete: true, chart_input_data: :perweekday_chart_data } %>

<h2>List of Posts (1 weeks)</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Post type</th>
      <th>User</th>
      <th>Text</th>
      <th>Ts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_type %></td>
        <td><%= post.user %></td>
        <td><%= post.text %></td>
        <td><%= post.ts %></td>
        <td><%= button_to 'Show', post, method: :get, class: 'btn btn-default' %></td>
        <td><%= button_to 'Edit', edit_post_path(post), method: :get, class: 'btn btn-default' %></td>
        <td><%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>